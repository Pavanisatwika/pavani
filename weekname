//week name
#include<stdio.h>
void main()
{
	int i;
	printf("enter the day number");
	scanf("%d",&i);
	if(i==1)
	printf("sunday");
	else if(i==2)
	printf("monday");
	else if(i==3)
	printf("tuesday");
	else if(i==4)
	printf("wednesday");
	else if(i==5)
	printf("thruday");
	else if(i==6)
	printf("friday");
	else if(i==7)
	printf("saturday");
}
